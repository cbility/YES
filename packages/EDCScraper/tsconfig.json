{
    "compilerOptions": {
        "composite": false,
        "target": "ES2015",
        "module": "es2015",
        "moduleResolution": "Bundler",
        "outDir": "./dist", /* Specify an output folder for all emitted files. */
        "rootDir": "./src",
        "declaration": false,
        "declarationMap": false, /* Create sourcemaps for d.ts files. */
        "strict": true,
        "alwaysStrict": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ],
}